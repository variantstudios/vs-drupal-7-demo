name = 'Novel'
description = 'Novel is a Starter Theme for VS.'
core = '7.x'
base theme = 'aurora'

; ========================================
; Regions
; ========================================

regions[logo] = 'Logo'
regions[topnav] = 'Top Nav'
regions[main_nav] = 'Main Nav'
regions[preface] = 'Preface'
regions[help] = 'Help'
regions[sidebar_first] = 'Sidebar First'
regions[content] = 'Main Region'
regions[sidebar_second] = 'Sidebar Second'
regions[footer] = 'Footer'

; ========================================
; Stylesheets
; ========================================

stylesheets[all][1] = 'assets/css/unslider.css'
stylesheets[all][0] = 'assets/css/unslider-dots.css'
stylesheets[all][0] = 'assets/css/style.css'
stylesheets[print][0] = 'assets/css/print.css'

; ========================================
; Scripts
; ========================================

scripts[] = 'assets/js/modernizr.min.js'
scripts[] = 'assets/js/picturefill.min.js'
scripts[] = 'assets/js/unslider-min.js'
scripts[] = 'assets/js/scripts.js'

; ========================================
; Modernizr
; ========================================

modernizr[tests][0] = 'css_boxsizing'

; ========================================
; Settings
; ========================================

settings[toggle_node_user_picture] = '0'
settings[toggle_comment_user_picture] = '1'
settings[toggle_comment_user_verification] = '1'
settings[default_logo] = '0'
settings[logo_path] = ''
settings[logo_upload] = ''
settings[default_favicon] = '1'
settings[favicon_path] = ''
settings[favicon_upload] = ''
settings[hide_recomended_modules] = '1'
settings[aurora_min_ie_support] = '9'
settings[aurora_html_tags] = '1'
settings[aurora_typekit_id] = ''
settings[aurora_livereload] = '0'
settings[aurora_livereload_port] = ''
settings[magic_embedded_mqs] = '0'
settings[magic_css_excludes] = ''
settings[magic_footer_js] = '1'
settings[magic_library_head] = '1'
settings[magic_experimental_js] = '0'
settings[magic_js_excludes] = ''
settings[magic_performance__active_tab] = 'edit-js'
settings[magic_css_excludes_regex] = ''
settings[magic_js_excludes_regex] = ''
